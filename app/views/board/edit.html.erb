<div clss="container">
    <h2 style="font-family: 'Pacifico', cursive;">Edit</h2>
    <form class="col m12 s12" action="/update/<%= @edit_post.id %>" method="post">
        <div class="input-field col m12 s12">
            <input id="title" type="text" class="validate" name="title" value="<%= @edit_post.title %>">
            <label for="last_name">Title</label>
        </div>
        <div class="input-field col m12 s12">
            <input id="title" type="text" class="validate" name="editor" value="<%= @edit_post.editor %>">
            <label for="last_name">Editor</label>
        </div>
        <div class="input-field col s12 m12">
            <textarea id="textarea1" class="materialize-textarea" name="content"><%= @edit_post.content %></textarea>
            <label for="textarea1">Content</label>
        </div>
        <div class="col s6 m4">
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
        </div>
    </form>
</div>
<script>
    $(document).ready(function() {
        Materialize.updateTextFields();
      });
</script>